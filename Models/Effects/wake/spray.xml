<?xml version="1.0"?>

<!-- white spray when on the step. -->


<PropertyList>

   <particlesystem>
    <name>Step spray</name>
    <type>normal</type>
    <texture>wake.png</texture>
    <emissive>false</emissive>
    <lighting>true</lighting>

    <offsets>
     <heading-deg>180</heading-deg>
     <x-m>  -2.48 </x-m>                                          <!-- step -->
     <y-m>   0.00 </y-m>
     <z-m>  -3.50 </z-m>                                          <!-- step tip -->
    </offsets>

    <condition>
     <and>
      <greater-than>
       <property>fdm/jsbsim/aero/coefficient/HLstep0</property>
       <value>20000.0</value>
      </greater-than>
      <property>/controls/environment/effects</property>
     </and>
    </condition>

    <attach>world</attach>

    <placer>
     <type>sector</type>                                          <!-- step wide -->
     <radius-min-m>0.0</radius-min-m>
     <radius-max-m>1.0</radius-max-m>
    </placer>

    <shooter>
     <theta-min-deg>45</theta-min-deg>                            <!-- up behind the step -->
     <theta-max-deg>90</theta-max-deg>
     <phi-min-deg>60.0</phi-min-deg>                              <!-- cone behind the step -->
     <phi-max-deg>120.0</phi-max-deg>
     <speed-mps>
      <value>6.0</value>
      <spread>2.5</spread>
     </speed-mps>
     <rotation-speed>
      <x-min-deg-sec> -20 </x-min-deg-sec>
      <y-min-deg-sec> -20 </y-min-deg-sec>
      <z-min-deg-sec> -20 </z-min-deg-sec>
      <x-max-deg-sec> 20 </x-max-deg-sec>
      <y-max-deg-sec> 20 </y-max-deg-sec>
      <z-max-deg-sec> 20 </z-max-deg-sec>
     </rotation-speed>
    </shooter>

    <counter>
     <particles-per-sec>
      <property>fdm/jsbsim/aero/coefficient/HLstep0</property>
      <factor>0.1</factor>
      <spread>50</spread>
     </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
     <start>
      <color>
       <red>
	<value>1.0</value>
       </red>
       <green>
	<value>1.0</value>
       </green>
       <blue>
        <value>1.0</value>
       </blue>
       <alpha>
        <value>0.3</value>
       </alpha>
      </color>
      <size>
       <value>0.5</value>
      </size>
     </start>
     <end>
      <color>
       <red>
	<value>1.0</value>
       </red>
       <green>
	<value>1.0</value>
       </green>
       <blue>
        <value>1.0</value>
       </blue>
       <alpha>
        <value>0.2</value>
       </alpha>
      </color>
      <size>
       <value>0.0</value>
      </size>
     </end>
     <life-sec>
      <value>5.0</value>
     </life-sec>
     <mass-kg>0.55</mass-kg>                                      <!-- heavier then air -->
     <radius-m>0.5</radius-m>
    </particle>

    <program>
     <fluid>water</fluid>
     <gravity>true</gravity>
     <wind>false</wind>
    </program>
   </particlesystem>

   <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>5000</max-m>
   </animation>

</PropertyList>
