<PropertyList include="Nasal/Boeing314-route.xml">
 <sim>

  <description>Boeing 314-A</description>
  <status>early-production</status>

  <flight-model>jsb</flight-model>
  <aero>Boeing314A</aero>

  <systems>
   <autopilot>
    <path>Aircraft/Boeing314/Systems/Boeing314A-autopilot.xml</path>
   </autopilot>
  </systems> 

  <sound>
   <audible>true</audible>
   <path>Aircraft/Boeing314/Sounds/Boeing314-sound.xml</path>
  </sound>

  <panel>
   <path>Aircraft/Boeing314/Panels/Boeing314A-2D-captain.xml</path>
   <visibility>true</visibility>
  </panel>
  <panel_2>
   <path>Aircraft/Boeing314/Panels/Boeing314A-2D-engineer.xml</path>
  </panel_2>

  <model>
   <path>Aircraft/Boeing314/Models/Boeing314Clipper.xml</path>
  </model> 

  <view>
   <internal archive="y">true</internal>
   <config>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">-0.5</x-offset-m>
     <y-offset-m archive="y">0.445</y-offset-m>
     <z-offset-m archive="y">-8.7</z-offset-m>
     <pitch-offset-deg>-1</pitch-offset-deg>
   </config>
  </view>

  <chase-distance-m type="double" archive="y">-37.5</chase-distance-m>

  <help>
   <line>Vmax at 6200 ft: 201 mph [175 kt]</line>
   <line>Vcruise at 11000 ft: 184 mph [160 kt]</line>
   <line>Vstall: 70 mph [61 kt]</line>
  </help>

 </sim>

 <nasal>
  <Boeing314>
   <file>Aircraft/Boeing314/Nasal/Boeing314.nas</file>
  </Boeing314>
 </nasal>

 <input>
  <keyboard>

   <key n="113">
    <name>q</name>
    <desc>reset speed-up.</desc>
    <binding>
     <command>property-assign</command>
     <property>/sim/speed-up</property>
     <value>1</value>
    </binding>
   </key>

  </keyboard>
 </input>


<!-- ============= -->
<!-- customization -->
<!-- ============= -->

<!-- engines on, low pitch -->

 <controls>
  <engines>
   <engine n="0">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="1">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="2">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="3">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
  </engines>
 </controls>
 
 <engines>
  <engine n="0">
   <rpm>1000</rpm>
  </engine>
  <engine n="1">
   <rpm>1000</rpm>
  </engine>
  <engine n="2">
   <rpm>1000</rpm>
  </engine>
  <engine n="3">
   <rpm>1000</rpm>
  </engine>
 </engines>
   
 <consumables>
  <fuel>
   <!-- overrides JBSim, which only sees US gallons (6.6 pound = 1 US gal = 3.875 l) -->

   <!-- The default filling is max takeoff weight (84000 lb / 5688 gallons fuel). -->

   <!-- For max landing weight (80000 lb / 5082 gallons fuel), remove the comments of this section. -->

   <tank n="4">
    <level-gal_us>130.0</level-gal_us>
   </tank>

   <!-- For empty tanks (center is emptied first), remove the comments of this section. -->

