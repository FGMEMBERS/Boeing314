<?xml version="1.0"?>

<!-- CAUTION, if preferences.xml isn't with 6 views, update Boeing314-views.xml and Boeing314-keyboard.xml !
-->

<!-- Version           CVS date                   Milestone
     ==========================================================================================
     1.0               January 2005               Aircraft, FDM, 2D panel.
     1.1               not yet known              3D cockpit, hydrodynamics.
     ==========================================================================================
-->


<PropertyList>

 <sim include="Nasal/Boeing314-views.xml">

  <description>Boeing 314-A</description>
  <status>early-production</status>
  <version>1.1</version>

  <startup>
   <splash-texture>Aircraft/Boeing314/Boeing314A-splash.rgb</splash-texture>
  </startup>

  <flight-model>jsb</flight-model>
  <aero>Boeing314A</aero>

  <presets>
   <tanks include="Nasal/Boeing314A-fuel.xml"/>
   <mooring include="Nasal/Boeing314-route.xml"/>
  </presets>

  <systems>
   <autopilot>
    <path>Aircraft/Boeing314/Systems/Boeing314A-autopilot.xml</path>
   </autopilot>
   <electrical>
    <path>Aircraft/Generic/generic-electrical.xml</path>
   </electrical>
  </systems> 

  <instrumentation>
   <path>Aircraft/Boeing314/Systems/Boeing314A-instrumentation.xml</path>
  </instrumentation>

  <sound>
   <audible>true</audible>
   <path>Aircraft/Boeing314/Sounds/Boeing314-sound.xml</path>
   <!-- <path>Aircraft/Boeing314/Sounds/Boeing314-b17-sound.xml</path> -->
  </sound>

  <panel>
   <path>Aircraft/Boeing314/Panels/Boeing314A-2D-captain.xml</path>
   <visibility>false</visibility>
  </panel>
  <panel_2>
   <path>Aircraft/Boeing314/Panels/Boeing314A-2D-engineer.xml</path>
  </panel_2>

  <model>
   <path>Aircraft/Boeing314/Models/Boeing314Clipper.xml</path>
  </model> 

  <chase-distance-m type="double" archive="y">-37.5</chase-distance-m>

  <help include="help.xml"/>

 </sim>

 <nasal>
  <Boeing314>
   <file>Aircraft/Boeing314/Nasal/Boeing314.nas</file>
  </Boeing314>
 </nasal>

 <input>
  <keyboard include="Nasal/Boeing314-keyboard.xml">
  </keyboard>
 </input>


<!-- ============= -->
<!-- customization -->
<!-- ============= -->

<!-- engines on, low pitch (parking) -->

 <controls>
  <engines>
   <engine n="0">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="1">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="2">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
   <engine n="3">
    <magnetos>3</magnetos>
    <propeller-pitch>0.0</propeller-pitch>
   </engine>
  </engines>
 </controls>

<!-- above 700 RPM avoids to the stop --> 

 <engines>
  <engine n="0">
   <rpm>1000</rpm>
  </engine>
  <engine n="1">
   <rpm>1000</rpm>
  </engine>
  <engine n="2">
   <rpm>1000</rpm>
  </engine>
  <engine n="3">
   <rpm>1000</rpm>
  </engine>
 </engines>

<!-- autopilot -->

 <autopilot>
  <settings>
   <target-speed-kt>110</target-speed-kt>
  </settings>
 </autopilot>

</PropertyList>
