    </binding>
   </key>

   <key n="8">
    <name>Ctrl-H</name>
    <desc>Toggle autopilot heading lock.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Boeing314.autopilotsystem.apheadingexport();</script>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </key>

   <key n="11">
    <name>Ctrl-K</name>
    <desc>Toggle observer view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Boeing314.seatsystem.viewexport("observer");</script>
    </binding>
   </key>

   <key n="12">
    <name>Ctrl-L</name>
    <desc>Toggle boat 2 view.</desc>
    <binding>
     <command>nasal</command>
     <script>globals.Boeing314.seatsystem.viewexport("boat2");</script>
    </binding>
   </key>

   <key n="14">
    <name>Ctrl-N</name>
    <desc>Toggle navigator view.</desc>
    <binding>
     <command>nasal</command>
