<?xml version="1.0"?>

<!-- CAUTION, if preferences.xml isn't with 6 views, update below :

     - /sim/number-views.
     - /sim/view n="xxx".
-->

<PropertyList>

  <!-- pilot seat in cockpit. -->

  <view>
   <internal archive="y">true</internal>
   <config>
    <!-- x/y/z == right/up/back -->
    <x-offset-m archive="y">-0.53</x-offset-m>
    <y-offset-m archive="y">0.55</y-offset-m>
    <z-offset-m archive="y">-8.07</z-offset-m>
    <pitch-offset-deg>-15</pitch-offset-deg>
   </config>
  </view>

  <!-- additional seats. -->

  <current-view>
   <seat>
    <captain type="bool">true</captain>
    <engineer type="bool">false</engineer>
    <radio type="bool">false</radio>
    <copilot type="bool">false</copilot>
    <star type="bool">false</star>
   </seat>
  </current-view>

  <number-views type="int">10</number-views>

  <view n="6">
    <name>Engineer View</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
     <from-model type="bool">true</from-model>
     <from-model-idx type="int">0</from-model-idx>
     <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
     <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
     <default-pitch-deg type="double">0</default-pitch-deg>
     <default-heading-deg type="double">0</default-heading-deg>
     <front-direction-deg type="double">0</front-direction-deg>
     <front-left-direction-deg type="double">45</front-left-direction-deg>
     <left-direction-deg type="double">90</left-direction-deg>
     <back-left-direction-deg type="double">135</back-left-direction-deg>
     <back-direction-deg type="double">180</back-direction-deg>
     <back-right-direction-deg type="double">225</back-right-direction-deg>
     <right-direction-deg type="double">270</right-direction-deg>
     <front-right-direction-deg type="double">315</front-right-direction-deg>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">0.71</x-offset-m>
     <y-offset-m archive="y">0.25</y-offset-m> <!-- head below the window -->
     <z-offset-m archive="y">-4.72</z-offset-m> <!-- behind the rear windows, before the wing door -->
     <pitch-offset-deg>0</pitch-offset-deg>
     <heading-offset-deg type="double">270</heading-offset-deg> <!-- parallel to the panel -->
    </config>
  </view>

  <view n="7">
    <name>Radio View</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
     <from-model type="bool">true</from-model>
     <from-model-idx type="int">0</from-model-idx>
     <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
     <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
     <default-pitch-deg type="double">0</default-pitch-deg>
     <default-heading-deg type="double">0</default-heading-deg>
     <front-direction-deg type="double">0</front-direction-deg>
     <front-left-direction-deg type="double">45</front-left-direction-deg>
     <left-direction-deg type="double">90</left-direction-deg>
     <back-left-direction-deg type="double">135</back-left-direction-deg>
     <back-direction-deg type="double">180</back-direction-deg>
     <back-right-direction-deg type="double">225</back-right-direction-deg>
     <right-direction-deg type="double">270</right-direction-deg>
     <front-right-direction-deg type="double">315</front-right-direction-deg>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">0.8</x-offset-m>
     <y-offset-m archive="y">0.25</y-offset-m> <!-- head below the window -->
     <z-offset-m archive="y">-5.50</z-offset-m> <!-- fowards rear window -->
     <pitch-offset-deg>-4</pitch-offset-deg>
     <heading-offset-deg type="double">0</heading-offset-deg> <!-- parallel to the panel -->
    </config>
  </view>

  <view n="8">
    <name>Copilot View</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
     <from-model type="bool">true</from-model>
     <from-model-idx type="int">0</from-model-idx>
     <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
     <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
     <default-pitch-deg type="double">0</default-pitch-deg>
     <default-heading-deg type="double">0</default-heading-deg>
     <front-direction-deg type="double">0</front-direction-deg>
     <front-left-direction-deg type="double">45</front-left-direction-deg>
     <left-direction-deg type="double">90</left-direction-deg>
     <back-left-direction-deg type="double">135</back-left-direction-deg>
     <back-direction-deg type="double">180</back-direction-deg>
     <back-right-direction-deg type="double">225</back-right-direction-deg>
     <right-direction-deg type="double">270</right-direction-deg>
     <front-right-direction-deg type="double">315</front-right-direction-deg>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">0.53</x-offset-m> <!-- symmetry with captain -->
     <y-offset-m archive="y">0.55</y-offset-m>
     <z-offset-m archive="y">-8.07</z-offset-m>
     <pitch-offset-deg>-4</pitch-offset-deg>
     <heading-offset-deg type="double">290</heading-offset-deg> <!-- inside its window -->
    </config>
  </view>

  <view n="9">
    <name>Star View</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
     <from-model type="bool">true</from-model>
     <from-model-idx type="int">0</from-model-idx>
     <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
     <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
     <default-pitch-deg type="double">0</default-pitch-deg>
     <default-heading-deg type="double">0</default-heading-deg>
     <front-direction-deg type="double">0</front-direction-deg>
     <front-left-direction-deg type="double">45</front-left-direction-deg>
     <left-direction-deg type="double">90</left-direction-deg>
     <back-left-direction-deg type="double">135</back-left-direction-deg>
     <back-direction-deg type="double">180</back-direction-deg>
     <back-right-direction-deg type="double">225</back-right-direction-deg>
     <right-direction-deg type="double">270</right-direction-deg>
     <front-right-direction-deg type="double">315</front-right-direction-deg>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">0.01</x-offset-m> <!-- centered -->
     <y-offset-m archive="y">0.77</y-offset-m>
     <z-offset-m archive="y">-1.90</z-offset-m>
     <pitch-offset-deg>0</pitch-offset-deg>
     <heading-offset-deg type="double">180</heading-offset-deg> <!-- towards the stern -->
    </config>
  </view>

</PropertyList>
