<?xml version="1.0"?>

<PropertyList>
  <name>Boeing314-menu</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <text>
    <label>Boeing 314 menu</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Autopilot</legend>
      <key>a</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-autopilot</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Crew</legend>
      <key>c</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-crew</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Direction Finder</legend>
      <key>d</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-gdf</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Environnement</legend>
      <key>e</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-environment</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Fuel</legend>
      <key>f</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-fuel</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Moorage</legend>
      <key>m</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-moorage</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Procedures</legend>
      <key>p</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-procedures</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Seaport</legend>
      <key>s</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>seaport</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Voice</legend>
      <key>v</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Boeing314-voice</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Help</legend>
      <key>h</key>
      <binding>
       <command>nasal</command>
       <script>gui.showHelpDialog("/sim/help")</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label>press the first letter, or escape/return</label>
    <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </color>
  </text>

  <text>
    <label></label>
  </text>

  <text>
    <label>~  fields are saved on exit in aircraft-data</label>
    <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </color>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>
</PropertyList>
