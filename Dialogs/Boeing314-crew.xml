<?xml version="1.0"?>

<PropertyList>
  <name>Boeing314-crew</name>
  <layout>vbox</layout>
  <width>400</width>

  <text>
    <label>Boeing 314 crew</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>

    <text>
      <halign>center</halign>
      <label>Virtual crew</label>
    </text>

    <group>
      <layout>hbox</layout>

      <checkbox>
        <label>Copilot</label>
        <halign>left</halign>
        <property>/controls/crew/copilot</property>
        <binding>
         <command>nasal</command>
         <script>globals.Boeing314.copilotcrew.toggleexport();</script>
        </binding>
      </checkbox>

      <input>
        <label>Throttle (kt)</label>
        <halign>left</halign>
        <property>/autopilot/settings/target-speed-kt</property>
      </input>
    </group>

    <text>
      <label></label>
    </text>

    <text>
      <label>Views</label>
    </text>

    <checkbox>
      <halign>left</halign>
      <label>Recover position of last session  ~</label>
      <property>/controls/seat/recover</property>
      <binding>
       <command>nasal</command>
       <script>globals.Boeing314.seatsystem.recoverexport();</script>
      </binding>
    </checkbox>

    <text>
      <label></label>
    </text>

    <text>
      <halign>center</halign>
      <label>Mooring</label>
    </text>

    <checkbox>
      <label>Automatic at startup  ~</label>
      <halign>left</halign>
      <property>/controls/mooring/automatic</property>
    </checkbox>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
       <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>
</PropertyList>
