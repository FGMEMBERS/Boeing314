<?xml version="1.0"?>

<!-- Call by operator for ground direction finding -->

<PropertyList>

 <name>GDF Call</name>
 <w-base>52</w-base>
 <h-base>52</h-base>

 <layers>

  <layer>
   <name>GDF Called</name>
    <type>switch</type>
     <layer>
      <condition>
       <equals>
        <property>/instrumentation/gdf/called</property>
        <value>1.0</value>
       </equals>
      </condition>
      <name>on</name>
      <texture>
      <path>Aircraft/Boeing314/Panels/Instruments/Textures/switches.rgb</path>
      <x1>0.0</x1>
      <y1>0.74</y1>
      <x2>0.25</x2>
      <y2>1.0</y2>
      </texture>
      <w>40</w>
      <h>40</h>
    <transformations>
      <transformation>
      <type>y-shift</type>
      <offset>3</offset>
      </transformation>
    </transformations>
    </layer>
    <layer>
    <name>off</name>
    <texture>
    <path>Aircraft/Boeing314/Panels/Instruments/Textures/switches.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.25</x2>
    <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>0</offset>
      </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title abbreviation</name>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GDF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>toggle call</name>
   <condition include="B314-cond-gdf-in-range.xml">
   </condition>
   <button>0</button>
   <x>-22</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-assign</command>
    <property>/instrumentation/gdf/called</property>
    <value type="double">1.0</value>
   </binding>
  </action>

 </actions>
 
</PropertyList>
