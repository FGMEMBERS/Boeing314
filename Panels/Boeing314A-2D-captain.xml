  <instrument include="Instruments/B314-speed-up.xml">
   <name>Speed up</name>
   <x>370</x>
   <y>420</y>
   <w>80</w>
   <h>80</h>
  </instrument>

<!-- Captain -->

  <instrument include="../../Instruments/asi.xml">
   <name>Indicated air speed</name>
   <x>80</x>
   <y>295</y>
   <w>120</w>
   <h>120</h>
  </instrument>

  <instrument include="../../Instruments/turn.xml">
